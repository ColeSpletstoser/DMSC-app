<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs188.dsmc.EventActivity4"
    android:background="@drawable/dmsc_background" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight = "50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOLA Jazz Band and Grand Ave Ruckus"
        android:id="@+id/eventText"
        android:background="#74cce5"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\nGet ready for a New Orleans Party! An afternoon of roots and brass band New Orleans music from the NOLA Jazz Band and Grand Ave Ruckus. The NOLA Jazz Band is proud to introduce our friends “Grand Ave Ruckus” and look forward to an expanding scene of traditional jazz in Des Moines during the first ever Firehouse Flea!"
        android:id="@+id/eventDescription"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dateText"
        android:text="\nSunday, September 24 2016 \n3:00-6:00 pm\n900 Mulberry Street\nDes Moines, IA 50309"
        android:textColor="#db5c87"
        android:textIsSelectable="true"
        android:layout_below="@+id/eventDescription"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="2dp"
        android:id="@+id/imageButton"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignTop="@+id/eventText"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
