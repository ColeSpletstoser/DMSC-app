<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:minHeight="50dp"
    android:background="@drawable/dmsc_background" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    ABOUT"
        android:id="@+id/textView2"
        android:minHeight="50dp"
        android:layout_weight="0.04"
        android:background="#74cce5"
        android:textColor="#fdfcfc"
        android:gravity ="center"
        android:editable="false"
        android:clickable="false"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="As an innovative arts and entertainment venue, the Des Moines Social Club has a lot to offer. From the live music for adults to art courses for children, they pride themselves on being neutral in all fields and attracting a wide array of visitors."
        android:id="@+id/textView9"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="53dp"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="http://desmoinessoicalclub.org/"
        android:id="@+id/textView10"
        android:textColor="#db5c87"
        android:layout_below="@id/textView9"
        android:layout_marginTop ="53dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>