<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:minHeight="50dp"
    android:background="@drawable/dmsc_background" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="    SETTINGS"
        android:id="@+id/textView2"
        android:minHeight="50dp"
        android:layout_weight="0.04"
        android:background="#74cce5"
        android:textColor="#fdfcfc"
        android:editable="false"
        android:clickable="false"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change Categories"
        android:id="@+id/textView3"
        android:textColor="#db5c87"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notification Settings"
        android:id="@+id/textView4"
        android:textColor="#db5c87"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="alerts"
        android:id="@+id/textView5"
        android:layout_weight="0.14"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginStart="124dp"
        android:layout_alignTop="@+id/mySwitch"
        android:layout_alignParentStart="true" />


    <Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView3"
        android:shadowColor="#c4a9a9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="reminders"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        android:textColor="#000000"
        android:layout_below="@+id/mySwitch"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="one hour before event"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/mySwitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About"
        android:id="@+id/textView7"
        android:textColor="#db5c87"
        android:layout_below="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginTop="33dp" />

</RelativeLayout>